<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#c0c0c0">

        <TextView
            android:id="@+id/pop_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="登陆后更精彩"
            android:textColor="#a5a5a5" />

        <LinearLayout
            android:id="@+id/pop_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/pop_tv1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/pop_register"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="#a5f5f3"
                android:text="注册" />

            <Button
                android:id="@+id/pop_enter"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="#a5f5f3"
                android:text="登陆" />
        </LinearLayout>

        <View
            android:id="@+id/pop_v"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/pop_ll"
            android:layout_margin="5dp"
            android:background="#c0c0c0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/pop_v"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/pop_img_qq"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:src="@mipmap/share_qq_bound" />

            <ImageView
                android:id="@+id/pop_img_weixin"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:src="@mipmap/share_weixin" />

            <ImageView
                android:id="@+id/pop_img_weibo"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:src="@mipmap/share_weibo" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>