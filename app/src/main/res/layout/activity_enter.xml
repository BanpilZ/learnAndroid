<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.klsf111.linghangbiao.activitys.activitys.EnterActivity">

    <RelativeLayout
        android:id="@+id/enter_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#138ae6">

        <ImageView
            android:id="@+id/enter_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:src="@mipmap/beauty_btn_back2" />

        <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="登录"
            android:textColor="#f0f0f0"
            android:textSize="20sp" />
    </RelativeLayout>

    <View
        android:id="@+id/enter_v"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_below="@id/enter_rl"
        android:background="#cccad0" />

    <TextView
        android:id="@+id/enter_tv_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/enter_v"
        android:layout_margin="10dp"
        android:text="账号"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/enter_et_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/enter_tv_number"
        android:layout_toRightOf="@id/enter_tv_number"
        android:background="@null"
        android:hint="请输入用户名" />

    <View
        android:id="@+id/enter_v2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/enter_tv_number"
        android:layout_margin="5dp"
        android:background="#cccad0" />

    <TextView
        android:id="@+id/enter_tv_psw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/enter_v2"
        android:layout_margin="10dp"
        android:text="密码"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/enter_et_psw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/enter_tv_psw"
        android:layout_toRightOf="@id/enter_tv_psw"
        android:background="@null"
        android:hint="请输入密码"
        android:inputType="textPassword" />

    <View
        android:id="@+id/enter_v3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/enter_tv_psw"
        android:layout_margin="5dp"
        android:background="#cccad0" />

    <TextView
        android:id="@+id/enter_forget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/enter_v3"
        android:layout_margin="20dp"
        android:text="忘记密码" />

    <Button
        android:id="@+id/enter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/enter_forget"
        android:layout_margin="10dp"
        android:layout_marginTop="10dp"
        android:background="#138ae6"
        android:onClick="enter"
        android:text="登录"
        android:textSize="20sp" />

    <View
        android:id="@+id/enter_v4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/enter"
        android:layout_margin="5dp"
        android:background="#c0c0c0" />

    <LinearLayout
        android:id="@+id/enter_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/enter_v4"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/enter_img_qq"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@mipmap/share_qq_bound" />

        <ImageView
            android:id="@+id/enter_img_weixin"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@mipmap/share_weixin" />

        <ImageView
            android:id="@+id/enter_img_weibo"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@mipmap/share_weibo" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/enter_ll"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/enter_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="立即注册"
            android:textColor="#138ae6" />
    </LinearLayout>

</RelativeLayout>
