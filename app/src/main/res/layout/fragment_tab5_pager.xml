<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.klsf111.linghangbiao.activitys.fragment.Tab5Pager">

    <RelativeLayout
        android:id="@+id/fragment_tab4_parent_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/mine_rl"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/mine_shape">

            <ImageView
                android:id="@+id/mine_img"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:scaleType="fitXY"
                android:src="@mipmap/tosend" />

            <TextView
                android:id="@+id/mine_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:layout_toRightOf="@id/mine_img"
                android:text="点击登录...."
                android:textColor="#f8f8f8" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:src="@mipmap/iconfont_jiantou" />
        </RelativeLayout>

        <RadioGroup
            android:id="@+id/mine_ll"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@id/mine_rl"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/mine_history"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@mipmap/lp_user_histroy_icon"
                android:gravity="center"
                android:text="观看历史" />

            <RadioButton
                android:id="@+id/mine_task"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@mipmap/lp_user_task_icon"
                android:gravity="center"
                android:text="任务" />

            <RadioButton
                android:id="@+id/mine_pay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@mipmap/lp_user_rechange_icon"
                android:gravity="center"
                android:text="记录" />
        </RadioGroup>

        <RelativeLayout
            android:id="@+id/mine_rl_mess"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/mine_ll"
            android:layout_margin="5dp">

            <ImageView
                android:id="@+id/mine_img_mess"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:src="@mipmap/text" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/mine_img_mess"
                android:text="我的消息" />
        </RelativeLayout>

        <View
            android:id="@+id/mine_v1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/mine_rl_mess"
            android:background="#cccad0" />

        <RelativeLayout
            android:id="@+id/mine_rl_fans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/mine_v1"
            android:layout_margin="5dp">

            <ImageView
                android:id="@+id/mine_img_fans"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:src="@mipmap/lp_user_fans_icon" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/mine_img_fans"
                android:text="我的粉丝" />
        </RelativeLayout>

        <View
            android:id="@+id/mine_v2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/mine_rl_fans"
            android:background="#cccad0" />

        <RelativeLayout
            android:id="@+id/mine_rl_attention"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/mine_v2"
            android:layout_margin="5dp">

            <ImageView
                android:id="@+id/mine_img_attention"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:src="@mipmap/lp_user_concern_icon" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"

                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/mine_img_attention"
                android:text="我的关注" />
        </RelativeLayout>

        <View
            android:id="@+id/mine_v3"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_below="@id/mine_rl_attention"
            android:background="#cccad0" />

        <RelativeLayout
            android:id="@+id/mine_rl_alert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/mine_v3"
            android:layout_margin="5dp">

            <ImageView
                android:id="@+id/mine_img_alert"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:src="@mipmap/lp_user_remind_icon" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/mine_img_alert"
                android:text="开奖提醒" />
        </RelativeLayout>


        <View
            android:id="@+id/mine_v4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/mine_rl_alert"
            android:background="#cccad0" />

        <RelativeLayout
            android:id="@+id/mine_rl_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/mine_v4"
            android:layout_margin="5dp">

            <ImageView
                android:id="@+id/mine_img_setting"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:src="@mipmap/lp_user_setting_icon" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/mine_img_setting"
                android:text="设置" />
        </RelativeLayout>
    </RelativeLayout>


</ScrollView>
